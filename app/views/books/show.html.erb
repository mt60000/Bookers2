<main>
  <%= render '/layouts/flash' %>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render '/users/user_info', user: @book_user %>
        <%= render '/books/new', book: @new_book %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user_id) do %>
                  <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: "40x40" %><br>
                  <%= @book.user.name %>
                <% end %>
              </td>
              <td><%= link_to @book.title, book_path(@book.id) %></td>
              <td><%= @book.body %></td>
              <td id="favorite-btn_<%= @book.id %>"><%= render '/favorites/favorite-btn', book: @book %></td>
              <td>コメント数：<span class="comment-count"><%= @book.book_comments.count %></span></td>
            </tr>
          </tbody>
        </table>
      <%= render 'book_comments/comment', book: @book %>
      </div>
    </div>
  </div>
</main>