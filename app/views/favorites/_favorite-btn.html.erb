<% if book.favorited_by?(current_user) %>
  <%= link_to book_favorite_path(id: book.id, book_id: book.id),method: :delete, class: "favorite-btn", remote: true do %>
    <i class="fas fa-heart red"></i><%= book.favorites.count %>
  <% end %>
<% else %>
  <%= link_to book_favorites_path(book),method: :post, class: "favorite-btn", remote: true do %>
    <i class="fas fa-heart"></i><%= book.favorites.count %>
  <% end %>
<% end %>