<main>
  <%= render '/layouts/flash' %>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render '/users/user_info', user: @book_user %>
        <%= render '/books/new', book: @new_book %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user_id) do %>
                  <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: "40x40" %><br>
                  <%= @book.user.name %>
                <% end %>
              </td>
              <td><%= link_to @book.title, book_path(@book.id) %></td>
              <td><%= @book.body %></td>
              <%= render '/books/favorite_comment_count', book: @book %>
            </tr>
          </tbody>
        </table>
        <div class="comments">
          <% @book.book_comments.each do |book_comment| %>
            <%= link_to user_path(@book.user_id), class: 'mr-3' do %>
              <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: "40x40" %><br>
              <%= @book.user.name %>
            <% end %>
            <%= book_comment.comment %>
            <% if book_comment.user_id == current_user.id %>
              <%= link_to 'Destroy', book_book_comment_path(book_comment.book, book_comment), method: :delete, class: 'btn btn-danger' %>
            <% end %>
            </br>
          <% end %>
        </div>
        <%= form_with(model:[@book,@book_comment], local: true) do |f| %>
          <%= f.text_area :comment, class: 'form-control mt-3' %>
          <%= f.submit '送信', class: 'mt-2' %>
        <% end %>
      </div>
    </div>
  </div>
</main>