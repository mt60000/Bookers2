<h2>User_info</h2>
<%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size: "100x100" %>
<table class="table">
  <tbody>
      <tr></tr>
      <tr>
          <th>name</th>
          <th><%= current_user.name %></th>
      </tr>
      <tr>
          <th>introduction</th>
          <th><%= current_user.introduction %></th>
      </tr>
  </tbody>
</table>
<div class="row">
  <%= link_to "", edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user" %>
</div>