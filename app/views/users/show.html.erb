<main>
  <%= render '/layouts/flash' %>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User_info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size: "100x100" %>
        <table class="table">
          <tbody>
              <tr></tr>
              <tr>
                  <th>name</th>
                  <th><%= @user.name %></th>
              </tr>
              <tr>
                  <th>introduction</th>
                  <th><%= @user.introduction %></th>
              </tr>
          </tbody>
        </table>
        <div class="row">
          <% if @user.id == current_user.id %>
            <%= link_to "", edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user" %>
          <% else %>
            <%= link_to "", user_path(current_user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user" %>
          <% end %>
        </div>
        <%= render '/books/new', book: @book %>
      </div>
      <div class="col-md-8 offset-md-1">
        <%= render '/books/books', book: @books %>
      </div>
    </div>
  </div>
</main>