<div class="user-name">
  <h1><%= @user.name %>さんとのチャット</h1>
</div>
<hr>
<div class="chats">
  <div class="chat">
    <% if @messages.present? %>
      <% @messages.each do |m| %>
        <div class="chat-box">
          <div class="chat-face">
            <%= attachment_image_tag m.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg",size: "40x40" %>
          </div>
          <div class="message"> <strong><%= m.message %></strong> <br>
            <%= m.created_at.strftime("%Y-%m-%d %H:%M")%>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="posts ml-2">
    <%= form_with model: @message, local: true do |f| %>
      <%= f.text_field :message, placeholder: "メッセージを入力して下さい" , size: 70, class:"form-text-field" %>
      <%= f.hidden_field :room_id, value: @room.id %>
    <% end %>
  </div>
</div>